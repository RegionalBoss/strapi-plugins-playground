{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/src/**/*.ts", "**/src/**/*.tsx", "**/src/**/*.d.ts"],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/build/**/*",
    // Do not include admin files in the server compilation
    // Do not include test files
    "**/*.test.ts"
  ]
}
